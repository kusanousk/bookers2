<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.tag, search_path(tag: book.tag) %></td>
        <td><%= render "favorites/favorite-btn", book: book %></td>
        <td><%= render "books/comment_count", book: book %></td>
        <td><%= render "books/rate_star", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>